@model FinalHamlin.Models.StudentWorkerModel
@{
    ViewData["Title"] = "Hamlin - Student Worker - Weekly Salary";
}

<div class="text-left">
    <h3 class="card-title text-primary mt-0 mb-1">Student Worker - Weekly Salary Form</h3>
    <h6 class="text-muted mb-3"><em>Get an estimate of your expected salary before tax.</em></h6>
    <div class="card">
        <div class="card-body">
            <div class="card-text">
                <div class="card-title">
                    <h4 class="mb-1 text-primary">Estimated Salary</h4>
                    <h5 class="mb-0"><label>Student Name:&nbsp;</label>&nbsp;<span class="text-primary">@ViewBag.FullName</span></h5>
                    <h5 class="mb-0"><label>Weekly Salary:&nbsp;</label>&nbsp;<span class="text-primary">@ViewBag.Salary</span></h5>
                </div>
                <hr />
                <form asp-action="Index" method="post">
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <div class="form-row">
                        <div class="col">
                            <label asp-for="FirstName">First Name: </label>
                            <input type="text" class="form-control" asp-for="FirstName" placeholder="Enter Your First Name" />
                        </div>
                        <div class="col">
                            <label asp-for="LastName">Last Name: </label>
                            <input type="text" class="form-control" asp-for="LastName" placeholder="Enter Your Last Name" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="StudentID">Student ID: </label>
                        <input type="number" class="form-control" asp-for="StudentID" placeholder="Enter Your Student ID (i.e, 900XXXXXX)" />
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <label asp-for="Pay">Pay Rate: </label>
                            <input type="number" step="0.01" class="form-control" asp-for="Pay" placeholder="Rate of Pay per Hour" />
                        </div>
                        <div class="col">
                            <label asp-for="Hours">Hours Worked: </label>
                            <input type="number" step="0.01" class="form-control" asp-for="Hours" placeholder="Number of Hours Worked" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Weekly Salary: </label>
                        <input class="form-control" value="@ViewBag.SAL.ToString("C2")" readonly />
                    </div>
                    <p class="mt-3 mb-1"><button class="btn btn-outline-primary" type="submit">Calculate Weekly Salary</button>&nbsp;&nbsp;<a asp-action="Index">Clear</a></p>
                </form>
            </div>
        </div>
    </div>
</div>
